<div class="prepend-top">
    <h4 class="clear">Kategorien</h4>
    <ul>
        <li>Alle Kategorien (<%= @posts.length %>)</li>
        <% Post::CATEGORIES.each { |cat| %>
            <li class="sub"><%= cat %> (<%= @posts.map(&:category).grep(cat).length %>)</li>
        <%- } %>
    </ul>
    <h4>Anzeigentyp</h4>
    <ul>
        <li>Alle Typen (<%= @posts.length %>)</li>
        <% Post::KINDS.each { |kind| %>
            <li class="sub"><%= kind %> (<%= @posts.map(&:kind).grep(kind).length %>)</li>
        <%- } %>
    </ul>
</div>
