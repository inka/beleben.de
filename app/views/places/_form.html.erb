<% form_for(@place, :html => { :multipart => true }) do |f| %>
    <%= f.hidden_field(:kiez, :value => controller.get_kiez)%>
    <%= f.error_messages %>
    <fieldset>
      <p>
        <%= f.label :title, "Titel *" %>
        <%= f.text_field :title, :size => 40, :class => "title" %>
      </p>

      <p>
        <%= f.label :description, "Beschreibung *" %>
        <%= f.text_area :description %>
      </p>

      <p>
        <%= f.label :address, "Adresse *" %>
        <%= f.text_field :address, :size => 40, :class => "title" %>
      </p>

      <p>
        <%= f.label :size, "Quadratmeteranzahl *" %>
        <%= f.text_field :size, :size => 10, :class => "title" %>
      </p>

      <p>
        <%= f.label :price, "Quadratmeterpreis Warm, Netto *" %>
        <%= f.text_field :price, :size => 10, :class => "title" %>
      </p>
      <p>
        <%= f.label :picture, "Bild" %>
        <%= file_field_tag :img_file, :size => 60 %><br/>
        <%- if !@place.pictures.empty? -%>
            <label>&nbsp;</label>
            <span style="display:block;margin-top:5px;">
              <%= picture_for(@place) %>&nbsp; Aktuelles Bild wird überschrieben.
            </span>
        <%- end -%>
      </p>
<!--
      <p>
        <%= f.label :price2, "Quadratmeterpreis Kalt, Netto" %>
        <%= f.text_field :price2, :size => 10 %>
      </p>

      <p>
        <%= f.label :totalprice, "Gesamtpreis Warm" %>
        <%= f.text_field :totalprice, :size => 10 %>
      </p>

      <p>
        <%= f.label :url %>
        <%= f.text_field :url, :size => 40 %>
      </p>

      <p>
        <%= f.label :email %>
        <%= f.text_field :email, :size => 40 %>
      </p>

      <p>
        <%= f.label :phone %>
        <%= f.text_field :phone, :size => 40 %>
      </p>
-->

      <p>
        <%- if action_name=='edit' -%>
            <%= f.submit 'Update' %>
            <%= link_to('Abbrechen', "/#{controller.get_kiez}#{place_path(@place)}") %> |
        <%- else -%>
            <%= f.submit 'Speichern' %>
        <%- end -%>
        <%= link_to('Zurück zur Kartendarstellung', {:action => :index}) %>            
      </p>
    </fieldset>
<% end %>
